@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<section class="row justify-content-center my-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="card-title text-center fw-bold text-primary mb-4">Edit Movie</h2>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter movie title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label fw-semibold"></label>
                        <input asp-for="Rating" class="form-control" placeholder="e.g., PG-13" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReleaseDate" class="form-label fw-semibold"></label>
                        <input asp-for="ReleaseDate" class="form-control" type="date" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label fw-semibold"></label>
                        <input asp-for="Genre" class="form-control" placeholder="e.g., Action, Drama" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="e.g., 9.99" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Watched" class="form-label fw-semibold"></label>
                        <select asp-for="Watched" class="form-select">
                            <option value="">Select status</option>
                            <option value="true">Watched</option>
                            <option value="false">Not Watched</option>
                        </select>
                        <span asp-validation-for="Watched" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <input type="submit" value="Save" class="btn btn-primary px-4" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .form-label {
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 0.375rem;
        box-shadow: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-outline-secondary {
        border-color: #6c757d;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>